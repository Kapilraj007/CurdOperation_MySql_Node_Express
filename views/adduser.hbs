<div class="container">
    <h2>Add New Client</h2>
    <div class="col-6">
      {{#if msg}}
        <p class="text bg-primary">{{msg}}</p>
      {{/if}}  
    <form method="post" action="/adduser" autocomplete="false">
  <div class="mb-3">
    <label for="name"  class="form-label">Name</label>
<input type="name" name="name" class="form-control">
  </div>
  <div class="mb-3">
    <label for="age" class="form-label">Age</label>
    <input type="name" name="age" class="form-control">
  </div>
  <div class="mb-3">
    <label for="city" class="form-label">City</label>
    <input type="name" name="city" class="form-control">
  </div>
 
  <button type="submit" class="btn btn-primary">Save Details</button>
<a class="btn btn-warning" href="/">view all</a>

</form>
</div>